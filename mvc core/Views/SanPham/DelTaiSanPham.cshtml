@model Demo_buoi4.Models.SanPham

@{
    ViewData["Title"] = "Deltai";
}
<h1>Deltai</h1>
<hr />
<form asp-action="AddSanPham" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="Ten" class="form-label">Ten</label>
        <input type="text" class="form-control" asp-for="Ten" disabled>
        <span asp-validation-for="Ten" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="SoLuong" class="form-label">Số Lượng</label>
        <input type="number" class="form-control" asp-for="SoLuong" disabled>
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ImgURL" class="form-label">Hình Ảnh </label>
        <input type="file" class="form-control" name="ImgURL" disabled>
        <span asp-validation-for="ImgURL" class="text-danger"></span>
    </div>
    <div>
        <a asp-action="UpdateSanPham" asp-route-id="@Model.Id" class="btn btn-warning">Edit </a>
    </div>
</form>
