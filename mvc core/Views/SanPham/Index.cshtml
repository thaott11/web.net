@model List<Demo_buoi4.Models.SanPham>

<table class="table table-bordered table-striped">
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="AddSanPham" class="btn btn-primary">Create new category</a>
    </div>

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Soluong</th>
            <th>Ảnh</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ten</td>
                <td>@item.SoLuong</td>
                <td> <img src="~/Img/@item.ImgURL" alt="Image" width="100" height="100" /></td>
                <td>
                    <div>
                        <a asp-action="RemoveSanPham" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Bạn có muốn xóa không ?');">Xóa</a>
                        <a asp-action="DelTaiSanPham" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
